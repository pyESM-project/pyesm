    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            // "cwd": "${workspaceFolder}/pySM",
            "cwd": "${fileDirname}",
            "env": {
                "PYTHONPATH": "${cwd}"
            }
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal",
            "justMyCode": false,
            // "cwd": "${workspaceFolder}/pySM",
            "cwd": "${fileDirname}",
            "env": {
                "PYTHONPATH": "${cwd}"
            }
        }
    ]
}